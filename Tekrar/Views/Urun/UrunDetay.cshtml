@{
    ViewBag.Title = "Ürün Detayı";
}

@using Tekrar.Models
@model Urunler

<div class="row">
    <div class="col-md-12">
        <div class="block">
            <div class="block-heading">
                <div class="main-text h2">
                    Ürünler
                </div>
                <div class="block-controls">
                    <span aria-hidden="true" class="icon icon-arrow-down icon-size-medium block-control-collapse"></span>
                </div>
            </div>
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Ürün Adı</th>
                                <th>Tedarikçi</th>
                                <th>Kategori</th>
                                <th>Birim Miktarı</th>
                                <th>Fiyat</th>
                                <th>Stok</th>
                                <th>Yeni Satış</th>
                                <th>Stok Durumu</th>
                                <th>Sil</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>@Model.UrunAdi</td>
                                @if (Model.Tedarikciler == null)    //tedarikçi ve kategorisinin girilmemesi durumunda
                                {
                                    <td>Boş</td>
                                }
                                else
                                {
                                    <td><span class="label label-primary">@Model.Tedarikciler.SirketAdi</span></td>
                                }
                                @if (Model.Kategoriler == null)
                                {
                                    <td>Boş</td>
                                }
                                else
                                {
                                    <td><span class="label label-info">@Model.Kategoriler.KategoriAdi</span></td>
                                }
                                <td>@Model.BirimdekiMiktar</td>
                                <td>@Model.Fiyat</td>
                                <td>@Model.Stok</td>
                                <td>@Model.YeniSatis</td>
                                <!--stok durumuna göre renkleri ve var yok yazılarını ayarlıyoz-->
                                @if (Model.Sonlandi)
                                {
                                    <td><span class="label label-danger">Stokta Yok</span></td>
                                }
                                else
                                {
                                    <td><span class="label label-success">Stokta Var</span></td>
                                }
                                <td><a href="/Urun/Sil/@Model.UrunID" class="btn btn-danger">Sil</a></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
